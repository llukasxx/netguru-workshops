%p#notice= notice
%p#error= flash[:error]

%p
  %b Title:
  = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%p
  %b Category
  = product.category.name

= link_to 'Edit', edit_category_product_path(category.id, product.id)
\|
= link_to 'Back', category_products_path, class: 'btn btn-primary'

%h3 Reviews

= render reviews

= link_to 'Add review', new_category_product_review_path(category.id, product.id), class: "btn btn-success", role: "button"



